{% extends 'base.html.twig' %}

{% block body %}
    <nav>
        <a href={{ path('home') }}>Home</a>
        {% if user %}
            <a href={{ path('logout') }}>Logout</a>
        {% else %}
            <a href={{ path('login') }}>Login</a>
        {% endif %}
    </nav>



    <h1>Bienvenu {{ user }}</h1>

    <p>Les derniers articles !</p>

    {% for post in posts%}
        <h2>{{ post.title }}</h2>
    {% endfor %}


{% endblock %}